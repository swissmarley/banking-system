# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=bankingsystem
DB_USER=postgres_username
DB_PASSWORD=postgres_password

# JWT Secret (change this in production!)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
DATA_ENCRYPTION_KEY=32-character-minimum-secret

# Server Configuration
PORT=5000
USE_SSL=true
SSL_CERT=%CD%\ssl\cert.pem
SSL_KEY=%CD%\ssl\key.pem
NODE_ENV=development
CORS_ORIGINS=http://localhost:3000
SESSION_TTL_MINUTES=15
PENDING_2FA_TTL_MINUTES=5
SESSION_COOKIE_NAME=banking_session
P2FA_COOKIE_NAME=banking_pending_2fa
COOKIE_SECURE=false

# Database Encryption / TLS
DB_SSL=false

# Two-factor Authentication
TOTP_ISSUER=Banking System
TOTP_DIGITS=6
TOTP_PERIOD=30

# Frontend Configuration
# Set to the public URL of the backend (e.g. https://api.example.com) if the frontend is hosted on a different domain.
# Leave blank to have the frontend proxy /api requests to the backend service through Docker.
FRONTEND_PUBLIC_API_URL=

# Swagger / API Docs
# Provide a comma-separated list of absolute URLs (e.g. https://api.example.com,https://staging.example.com)
# that should appear in the Swagger "Servers" dropdown. Leave empty to use only localhost and the current host.
SWAGGER_SERVER_URLS=
